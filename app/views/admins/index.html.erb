<div id="admin-page">
  <p class="welcome">Welcome <span><%= current_admin.email %></span></p>
  <div class="record-link">
    <%= link_to "Go to attendance page", view_attendance_path %>

  </div>


  <div class="upload-div">

    <% if @str_msg %>
        <strong class="save-success">Data saved successfully</strong>

    <% end %>

    <h2>upload csv files</h2>

    <div id="upload-csv-file">
      <%= form_tag(admins_index_path, multipart: true) do %>
          <table>
            <tr>
              <td><%= file_field_tag :file, :id => "file_name" %></td>
              <td><%= image_submit_tag "import_csv_btn.png", class: "import-csv-btn-cls",
                                                                   :onclick => "return check_file();"%></td>
            </tr>
          </table>

      <% end %>
    </div>
  </div>

  <div class="emp-nav-div">
    <h2>Employee details</h2>
    <table id="view-record">
      <thead>
      <tr>
        <th>Employee Id</th>
        <th>Employee name</th>
        <th colspan="3" class="center">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.emp_id %></td>
            <td><%= employee.emp_name %></td>
            <td class="center"><%= link_to image_tag("edit.png"), edit_employee_path(employee) %></td>
            <td class="center"><%= link_to image_tag("delete.png"), employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to 'New Employee', new_employee_path %>

  </div>





</div>


